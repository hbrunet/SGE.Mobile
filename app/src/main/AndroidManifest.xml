<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sge.mobile.presentation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sge.mobile.presentation.ProductsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_products" />
        <activity
            android:name="com.sge.mobile.presentation.LoginActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sge.mobile.presentation.OrderActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_order"></activity>
        <activity
            android:name="com.sge.mobile.presentation.ChangePasswordActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_change_password"></activity>
        <activity
            android:name="com.sge.mobile.presentation.TableOrdersActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_table_orders"></activity>
    </application>

</manifest>
